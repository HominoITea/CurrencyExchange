<UserControl x:Class="WpfClient.Views.Controls.StartYearControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClient.Views.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Height="20" Width="20"  HorizontalAlignment="Center" VerticalAlignment="Center" Content="&lt;">
        </Button>
        <TextBlock x:Name="StartYearText" Grid.Column="1" Text="2023" PreviewTextInput="NumberValidationHandler"  Height="20" HorizontalAlignment="Center"  VerticalAlignment="Center"></TextBlock>
        <Button Grid.Column="2" Height="20" Width="20" HorizontalAlignment="Center"  VerticalAlignment="Center" Content=">">
        </Button>
    </Grid>
</UserControl>
